#! /usr/bin/env node

const path = require('path')
const express = require('express')
const {EventEmitter} = require('events')

const createCore = require('../src')

const app = express()
const sourcePath = path.resolve(process.argv.length <= 2 ? './' : process.argv[2])

console.log(`path: ${sourcePath}`)

const ev = new EventEmitter()
ev.on('error', err => console.error('ev2 error: ', err))
ev.on('compiled', filename => console.log('ev2 compiled: ', filename))
ev.on('updated', filename => console.log('ev2 updated: ', filename))
ev.on('start', filename => console.log('ev2 start: ', filename))


const core = createCore()
app.use(core.serve({sourcePath, ev}))
app.use(express.static(sourcePath))


app.listen(3000, () => {
    console.log('http://localhost:3000/')
})

